{
    "manifest_version": 3,
    "name": "YouTube Auto Like",
    "version": "1.2.1",
    "description": "Automatic like and channel management assistant for YouTube.",
    "icons": {
        "16": "src/assets/icons/icon16.png",
        "32": "src/assets/icons/icon32.png",
        "48": "src/assets/icons/icon48.png",
        "128": "src/assets/icons/icon128.png"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "src/background/service-worker.js"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_title": "Auto Like Settings",
        "default_icon": {
            "16": "src/assets/icons/icon16.png",
            "32": "src/assets/icons/icon32.png",
            "48": "src/assets/icons/icon48.png",
            "128": "src/assets/icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "src/content/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "src/options/options.html",
        "open_in_tab": true
    }
}